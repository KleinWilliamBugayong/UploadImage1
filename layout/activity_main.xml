<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">


        <!-- Image Cream 1 -->
        <ImageView
            android:id="@+id/imageCream1"
            android:layout_width="245dp"
            android:layout_height="166dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1"
            app:srcCompat="@drawable/upload_image_cream" />

        <!-- Image Search 1 -->
        <ImageView
            android:id="@+id/imageSearch1"
            android:layout_width="210dp"
            android:layout_height="145dp"
            app:layout_constraintBottom_toBottomOf="@id/imageCream1"
            app:layout_constraintEnd_toEndOf="@id/imageCream1"
            app:layout_constraintStart_toStartOf="@id/imageCream1"
            app:layout_constraintTop_toTopOf="@id/imageCream1"
            app:srcCompat="@drawable/ic_image_search" />

        <!-- Button 1 -->
        <Button
            android:id="@+id/selectImageBtn1"
            android:layout_width="126dp"
            android:layout_height="54dp"
            android:text="Select Image"
            android:textColor="@color/light_gray"
            app:layout_constraintEnd_toEndOf="@id/imageCream1"
            app:layout_constraintStart_toStartOf="@id/imageCream1"
            app:layout_constraintTop_toBottomOf="@id/imageCream1"
            app:layout_constraintVertical_bias="0.1" />

